<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

	<Button android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:id="@+id/static_layout_test"
	        android:text="StaticLayout"/>

	<Button android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/static_layout_test"
	        android:id="@+id/normal_layout_test"
	        android:text="NormalLayout"/>
	
	<Button android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/normal_layout_test"
	        android:id="@+id/static_long_string"
	        android:text="StaticLongString"/>

	<Button android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/static_long_string"
	        android:id="@+id/normal_long_string"
	        android:text="NormaLongString"/>

	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/normal_long_string"
		android:id="@+id/hilo"
		android:text="hilo"/>
</RelativeLayout>
